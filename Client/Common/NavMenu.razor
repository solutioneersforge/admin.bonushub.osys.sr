<MudDrawer Style="@($"background-color: {(StandardTheme.IsInDarkMode ? AppColors.Tuna : AppColors.White)}")" @bind-Open="SideBarOpen" Fixed Elevation="0"
           Variant="@DrawerVariant.Responsive" OpenMiniOnHover>

    <MudDrawerHeader>
        <MudTooltip Text="Hide Menu" Arrow>
            <MudFab IconColor="MudBlazor.Color.Error" Size="MudBlazor.Size.Small" IconSize="MudBlazor.Size.Small" StartIcon="@Icons.Material.Filled.Close" OnClick="async () => await OnSideBarToggled.InvokeAsync()" />
        </MudTooltip>
    </MudDrawerHeader>

    <MudNavMenu>
        <MudNavGroup Icon="@Icons.Material.Filled.ViewList" Expanded Title="Adds">
            <MudNavLink Href="/vipadds" Match="NavLinkMatch.Prefix" Ripple Icon="@HelperFunctions.GetPlacementZoneIcon(PlacementZone.Vip)">@PlacementZone.Vip.GetDescription()</MudNavLink>
            <MudNavLink Href="/topadds" Match="NavLinkMatch.Prefix" Ripple Icon="@HelperFunctions.GetPlacementZoneIcon(PlacementZone.Top)">@PlacementZone.Top.GetDescription()</MudNavLink>
            <MudNavLink Href="/centeradds" Match="NavLinkMatch.Prefix" Ripple Icon="@HelperFunctions.GetPlacementZoneIcon(PlacementZone.Center)">@PlacementZone.Center.GetDescription()</MudNavLink>
            <MudNavLink Href="/rightadds" Match="NavLinkMatch.Prefix" Ripple Icon="@HelperFunctions.GetPlacementZoneIcon(PlacementZone.Right)">@PlacementZone.Right.GetDescription()</MudNavLink>
            <MudNavLink Href="/leftadds" Match="NavLinkMatch.Prefix" Ripple Icon="@HelperFunctions.GetPlacementZoneIcon(PlacementZone.Left)">@PlacementZone.Left.GetDescription()</MudNavLink>
        </MudNavGroup>
        <MudNavLink Href="/changelogs" Match="NavLinkMatch.Prefix" Ripple Icon="@Icons.Material.Filled.ChangeHistory">Changelogs</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    [Parameter]
    public EventCallback OnSideBarToggled { get; set; }

    [Parameter]
    public bool SideBarOpen { get; set; }
}
