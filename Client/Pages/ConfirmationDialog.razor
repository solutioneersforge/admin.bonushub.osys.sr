@inject ISnackbar SnackbarService
@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudText>@Item.HeaderText</MudText>
        <MudText Typo="Typo.body2">@Item.MessageText</MudText>
    </DialogContent>
    <DialogActions>
        <MudSpacer />
        <MudButton Color="MudBlazor.Color.Info" EndIcon="@Item.SubmitButtonIcon" Style="@Styles.StandardButtonNoColorStyle" Variant="MudBlazor.Variant.Filled" OnClick="Submit">@Item.SubmitButtonText</MudButton>
        <MudButton Color="MudBlazor.Color.Error" EndIcon="@Item.CancelButtonIcon" Style="@Styles.StandardButtonNoColorStyle" Variant="MudBlazor.Variant.Filled" OnClick="Cancel">@Item.CancelButtonText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] public (string HeaderText, string MessageText, string SubmitButtonText, string CancelButtonText, string SubmitButtonIcon, string CancelButtonIcon) Item { get; set; } = new();

    void Submit() => MudDialog.Close(DialogResult.Ok(true));

    void Cancel() => MudDialog.Cancel();
}
